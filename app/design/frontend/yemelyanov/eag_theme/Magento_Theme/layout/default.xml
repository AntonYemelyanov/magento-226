<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/photo-logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">200</argument>
                <argument name="logo_img_height" xsi:type="number">200</argument>
            </arguments>
        </referenceBlock>


        <referenceContainer name="footer">
            <container name="footer.geekhub.container" htmlClass="pseudo-container" htmlTag="div" after="footer_links">

                <block class="Magento\Framework\View\Element\Text" name="geekhub.label" as="geekhub_label">
                    <action method="setText">
                        <argument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="value" xsi:type="string">This text from block geekhub.label in footer.geekhub.container</argument>
                    </action>
                </block>

                <block class="Magento\Framework\View\Element\Template" name="geekhub.template" as="geekhub_template_block" template="Magento_Theme::eag/footer_item_template.phtml"/>

            </container>
        </referenceContainer>


    </body>
</page>


